---
import Default from '../layouts/Default.astro';

const COMPONENTS = [
  ["BufferedList", "bufferedlist", "react"],
  ["CodeButton", "codebutton", "react"],
  ["Story", "story", "svelte"],
]
---

<Default title="rzkyif / components" description="A collection of front-end components.">
	<div class="
		flex flex-col flex-1 items-center justify-center p-8
    bg-[var(--bg-4)]
	">
		<div class="flex flex-wrap justify-center">
      {
        COMPONENTS.map(([componentName, componentLink, componentType]) => (
          <a
            class = "text-4xl py-4 px-8 my-2 mx-2 font-bold outline outline-[var(--bg-5)] hover:outline-black dark:hover:outline-white rounded-xl"
            style = {`background: var(--bg-${componentType})`}
            href = {`/components/${componentLink}`}
          >
            {componentName}
          </a>
        ))
      }
    </div>
	</div>
</Default>
