---
import Default from '../layouts/Default.astro';

const COMPONENTS = [
  ["CodeButton", "/codebutton"]
]
---

<Default title="rzkyif's Components">
	<div class="
		flex flex-col items-center justify-center p-8 h-[calc(100vh-60px)] max-h-[calc(100vh-60px)]
		text-neutral-900 bg-neutral-200
		dark:text-neutral-100 dark:bg-neutral-800
	">
		<h1 class="font-extrabold text-xl mb-2">Components:</h1>
		<div class="mt-2 flex flex-wrap justify-center">
      {
        COMPONENTS.map(([componentName, componentLink]) => (
          <a
            class = "py-2 px-4 font-bold hover:outline text-neutral-900 bg-neutral-300 dark:text-neutral-200 dark:bg-neutral-700 rounded-xl"
            href = {`/components/${componentLink}`}
          >
            {componentName}
          </a>
        ))
      }
    </div>
	</div>
</Default>
