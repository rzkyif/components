---
import Header from '../components/internal/Header';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="
font-sans dark
">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script>
			if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
				document.documentElement.classList.add('dark')
			} else {
				document.documentElement.classList.remove('dark')
			}
		</script>
	</head>
	<body class="
		flex flex-col items-center max-h-screen overflow-x-hidden overflow-y-scroll
		text-neutral-900 bg-neutral-200 
		dark:text-neutral-200 dark:bg-neutral-800
	">
		<Header client:load/>
		<div class="flex flex-col w-screen max-w-5xl bg-neutral-300 dark:bg-neutral-900">
			<slot />
		</div>
	</body>
</html>
